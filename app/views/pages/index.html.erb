<div class="page_wrapper">
  <h1><%= link_to "InstantTube", root_path, class: "brand_title" %></h1>

  <%= form_tag(root_path, method: "get", class: "search_form") do %>
    <%= label_tag(:search, "Search for Videos Here") %><br>
    <br>
    <%= text_field_tag :search %><br>
    <br>
    <%= submit_tag "Search", class: "btn btn-default" %>
  <% end %>

  <% @search_query.videos.each_slice(4) do |slice| %>
    <div class="row">
      <% slice.each do |video| %>
        <%= link_to "https://www.youtube.com/watch?v=" + video['id']['videoId'] do %>
        <div class="col-md-3">
          <div class="thumbnail">
            <%= image_tag(video['snippet']['thumbnails']['high']['url']) %>
            <div class="caption">
              <h3><%= video['snippet']['title'] %></h3>
              <p><%= video['snippet']['description'] %></p>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>